<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.technologies.tuch.tuch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".MessageActivity"
            android:label="@string/title_activity_message"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateMessageActivity"
            android:label="@string/title_activity_create_message">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.technologies.tuch.tuch.Settings.SettingsActivity" />
        </activity>
        <activity
            android:name=".Settings.HelpActivity"
            android:label="@string/title_activity_help">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.technologies.tuch.tuch.Settings.SettingsActivity" />
        </activity>
        <activity
            android:name=".Settings.AboutActivity"
            android:label="@string/title_activity_about">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.technologies.tuch.tuch.Settings.SettingsActivity" />
        </activity>
        <activity
            android:name=".ContactsActivity"
            android:label="@string/title_activity_contacts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Settings.AccountSettingsActivity"
            android:label="@string/title_activity_account_settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.technologies.tuch.tuch.Settings.SettingsActivity" />
        </activity>
        <activity
            android:name=".Settings.AppSettingsActivity"
            android:label="@string/title_activity_app_settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.technologies.tuch.tuch.Settings.SettingsActivity" />
        </activity>
        <activity android:name=".GroupChatActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.technologies.tuch.tuch.Settings.SettingsActivity" />
        </activity>
        <activity
            android:name=".DialogActivity"
            android:label="@string/title_activity_dialog"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CollectionActivity"
            android:label="@string/title_activity_collection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchActivity"
            android:label="@string/search_friend_text"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SelectStickerActivity" />
        <activity
            android:name=".NewFriendsActivity"
            android:label="@string/new_friends_text"></activity>
    </application>

</manifest>
